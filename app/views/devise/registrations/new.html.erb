<div class= "loginContents">
<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
 <%= render "devise/shared/error_messages", resource: resource %>
   <div class="title"><i class="fa-solid fa-user-plus"></i>新規登録</div>
    <div class="formContainer">
     <i class="fa-solid fa-user"></i>
     <%= f.label :"ユーザーネーム" %><em>(10文字以内)</em><br />
     <%= f.text_field :name, autofocus: true, maxlength: "10" %>
 </div>

  <div class="formContainer">
    <i class="fa-solid fa-envelope"></i>
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
 
  <%if @sns_id.present? %>
    <%= hidden_field_tag :sns_auth, true %>
  <% else %>
   <div class="formContainer">
    <i class="fa-solid fa-key"></i>
      <%= f.label :"パスワード" %>
      <% @minimum_password_length %> <em>(半角英数字含む<%= @minimum_password_length %>文字以上12文字以内)</em><br />    
      <%= f.password_field :password, autocomplete: "new-password" %>
   </div>
   <div class="formContainer">
     <i class="fa-solid fa-key"></i>
     <%= f.label :"確認用パスワード" %><br/>
     <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <% end %>
  
  <div class="formContainer">
    <i class="fa-solid fa-address-card"></i>
    <%= f.label :"プロフィール" %><br/>
    <%= f.text_area :profile, autofocus: true, maxlength: "200" %>
  </div>
  
  <div class="formContainer">
    <%= f.submit "登録" %>
    <%= render "devise/shared/links" %>
  </div>
 <% end %>
 <div class="title-h1">
  <%= button_to "Googleで登録", user_google_oauth2_omniauth_authorize_path, data: { turbo: false } %>
 </div> 
</div>


