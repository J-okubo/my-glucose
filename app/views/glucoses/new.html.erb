<%= form_with model: @glucose, local: true do |g| %>
<div class= "glucose_nav">
 <p>血糖値管理表<i class="fa-solid fa-syringe"></i></p>
</div>
  <table>
     <thead>
       <tr>
         <th>日付</th>
          <th>朝食前</th>
          <th>朝食後</th>
          <th>昼食前</th>
          <th>昼食後</th>
          <th>夕食前</th>
          <th>夕食後</th>
          <th>備考欄</th>
        </tr>
      </thead>
        <tbody>
          <tr>
            <td><%= g.date_field :date, class:"glucose-data" %></td>
            <td><%= g.text_field :before_breakfast_glucose %></td>
            <td><%= g.text_field :after_breakfast_glucose %></td>
            <td><%= g.text_field :before_lunch_glucose %></td>
            <td><%= g.text_field :after_lunch_glucose %></td>
            <td><%= g.text_field :before_dinner_glucose %></td>
            <td><%= g.text_field :after_dinner_glucose %></td>
            <td><%= g.text_area :remarks_section ,class:"glucose_remarks" %></td>
           </tr>
        </tbody>
   </table> 
   <div class="btn-actions">
    <%= g.submit '保存' %>
  </div>
 <% end %>